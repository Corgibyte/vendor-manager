@using VendorManager.Models;

@{
  Layout = "_Layout";
}

<div class="vendorGrid">
  <div class="subheader">
    <h3>@Model["vendor"].Name</h3>
  </div>
  <div class="contactInfo">
    <h5>Contact Info</h5>
    <p>@Model["vendor"].Contact.Name</p>
    <p>@Model["vendor"].Contact.Email</p>
    <p>@Model["vendor"].Contact.Phone</p>
    <p>@Model["vendor"].Contact.Pronouns</p>
    <a href='/vendors/@Model["vendor"].Id/edit' class='btn btn-secondary' role='button'>Edit Vendor</a>
  </div>
  <div class="orderHeader">
    <h3>Active Orders</h3>
  </div>
  <div class="orderButton">
    <a href='/vendors/@Model["vendor"].Id/orders/new' class='btn btn-secondary' role='button'>Add Order</a>
  </div>
  <div class="orderList">
    @foreach (Order order in @Model["orders"])
    {
      <div>
        <h4><a href='/vendors/@Model["vendor"].Id/orders/@order.Id'>@order.Title</a></h4>
        <p>@order.Description</p>
        <p>@order.DeliveryTime</p>
      </div>
    }
  </div>
</div>
