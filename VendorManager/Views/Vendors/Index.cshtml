@using System.Collections.Generic;
@using VendorManager.Models;

@{
  Layout = "_Layout";
}

<div class="container">
  <h1>Vendors</h1>

  @if (@Model.Count == 0)
  {
    <h3><a href='/vendors/new'>No current vendors</a></h3>
  }

  @foreach (Vendor vendor in Model)
  {
    <div class="card">
      <div class="card-body">
        <h5 class="card-title">@vendor.Name</h5>
        <p class="card-text"><a href='/vendors/@vendor.Id'>@vendor.Orders.Count active order(s)</a></p>
      </div>
    </div>
  }
</div>